<div class="mb-3">
    <label for="locationInput">Search by Location:</label>
    <input type="text" id="locationInput" class="form-control"
           value="@_searchLocation" @onchange="ChangeSearchLocation"/>
</div>

<div class="mb-3">
    <label for="datePicker">Select Date:</label>
    <input type="date" id="datePicker" class="form-control"
           value="@_selectedDate.ToString("yyyy-MM-dd")"
           @onchange="ChangeSelectedDate"/>
</div>

<div class="row">
    @foreach (var car in _carProfiles)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <img src="assets/images/cars/@car.ImageName" class="card-img-top" alt="Image of @car.Make @car.Model">
                <div class="card-body">
                    <h5 class="card-title">@car.Make @car.Model</h5>
                    <hr>
                    <p class="card-text">
                        <strong>Year: </strong>@car.Year
                    </p>
                    <p class="card-text">
                        <strong>Location: </strong>@car.Location
                    </p>
                    <p class="card-text">
                        <strong>Available: </strong>
                        <span class="badge @(car.IsAvailable ? "bg-success" : "bg-danger")">
                            @(car.IsAvailable ? "Yes" : "No")
                        </span>
                    </p>
                    <a href="Details/@car.Id" class="btn btn-primary btn-sm">View Details</a>
                </div>
            </div>
        </div>
    }
</div>

<div class="d-flex justify-content-between my-4">
    <button class="btn btn-outline-primary" @onclick="NavigateBack" disabled="@(!CanNavigateBack)">Previous</button>
    <button class="btn btn-outline-primary" @onclick="NavigateForward" disabled="@(!_canNavigateForward)">Next</button>
</div>